<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Добавить задачу"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/backbutton"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"

        android:background="@color/white"
        android:ems="10"
        android:hint="Заголовок задачи"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:textColor="@color/gray" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPersonName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:drawableStart="@drawable/budilnk"
        android:ems="10"
        android:hint="16:30"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPersonName"
        android:layout_alignRight="@id/editTextTextPersonName"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:drawableStart="@drawable/calendar222"
        android:hint="14.01.21"
        android:paddingStart="10dp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="352dp"
        android:layout_height="100dp"
        android:layout_below="@id/editTextTextPersonName2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Описание задачи"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingBottom="50dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPersonName3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:backgroundTint="@color/butttttt"
        android:text="@string/bud"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="620dp"
        android:backgroundTint="@color/red"
        android:text="@string/delit" />

</RelativeLayout>






